# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Database
# For development: DATABASE_PROVIDER=sqlite and DATABASE_URL=file:./dev.db
# For production: DATABASE_PROVIDER=postgresql and DATABASE_URL=postgresql://user:password@host:port/neondb?sslmode=require
DATABASE_PROVIDER=postgresql
DATABASE_URL="postgresql://user:password@host:port/neondb?sslmode=require"
# DIRECT_URL is required for migrations if using pooled connection
DIRECT_URL="postgresql://user:password@host:port/neondb?sslmode=require"

# Stripe Configuration (Phase 2 - for billing & subscriptions)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
